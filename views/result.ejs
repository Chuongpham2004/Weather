<%- include('partials/header') %>

    <!-- Main Content -->
    <main class="flex-1">
        <!-- Breadcrumb -->
        <nav class="border-b border-white/10" aria-label="Breadcrumb">
            <div class="container mx-auto px-4 py-3">
                <div class="flex items-center gap-2 text-sm text-white/50">
                    <a href="/" class="hover:text-white transition-colors">
                        <%= __('result.breadcrumb.home') %>
                    </a>
                    <span>‚Ä∫</span>
                    <span class="text-white">
                        <%= weather.current.city %>, <%= weather.current.country %>
                    </span>
                </div>
            </div>
        </nav>

        <!-- Current Weather Section -->
        <section class="py-6 md:py-10">
            <div class="container mx-auto px-4">
                <!-- Location Header -->
                <div class="text-center mb-6 md:mb-8">
                    <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-2">
                        <%= weather.current.city %>, <%= weather.current.country %>
                    </h1>
                    <p class="text-white/60 text-sm md:text-base">
                        <%= __('result.updatedAt', formatTime(weather.current.dt), formatDate(weather.current.dt)) %>
                    </p>
                </div>

                <!-- Current Weather Card -->
                <div
                    class="glass-card p-6 md:p-8 bg-gradient-to-br from-accent-blue/30 to-primary/20 max-w-3xl mx-auto">
                    <!-- Main Weather Display -->
                    <div class="text-center mb-6 md:mb-8">
                        <div class="flex items-center justify-center gap-4 md:gap-6">
                            <img src="<%= weather.current.iconUrl %>" alt="<%= weather.current.description %>"
                                class="w-20 h-20 md:w-28 md:h-28 lg:w-32 lg:h-32 object-contain" width="120"
                                height="120" loading="eager">
                            <div class="flex items-start">
                                <span class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-bold leading-none">
                                    <%= weather.current.temperature %>
                                </span>
                                <span class="text-2xl md:text-3xl font-medium mt-2">¬∞C</span>
                            </div>
                        </div>
                        <p class="text-xl md:text-2xl capitalize mt-3 md:mt-4">
                            <%= weather.current.description %>
                        </p>
                        <p class="text-white/60 mt-1">
                            <%= __('result.feelsLike') %> <strong class="text-white">
                                    <%= weather.current.feelsLike %>¬∞C
                                </strong>
                        </p>
                    </div>

                    <!-- Weather Details Grid -->
                    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-3 md:gap-4">
                        <div class="glass-card p-3 md:p-4 flex items-center gap-3">
                            <span class="text-xl md:text-2xl">üíß</span>
                            <div>
                                <p class="text-[10px] md:text-xs text-white/50 uppercase tracking-wide">
                                    <%= __('result.details.humidity') %>
                                </p>
                                <p class="font-semibold text-sm md:text-base">
                                    <%= weather.current.humidity %>%
                                </p>
                            </div>
                        </div>
                        <div class="glass-card p-3 md:p-4 flex items-center gap-3">
                            <span class="text-xl md:text-2xl">üí®</span>
                            <div>
                                <p class="text-[10px] md:text-xs text-white/50 uppercase tracking-wide">
                                    <%= __('result.details.wind') %>
                                </p>
                                <p class="font-semibold text-sm md:text-base">
                                    <%= weather.current.windSpeed %> m/s
                                </p>
                            </div>
                        </div>
                        <div class="glass-card p-3 md:p-4 flex items-center gap-3">
                            <span class="text-xl md:text-2xl">üëÅÔ∏è</span>
                            <div>
                                <p class="text-[10px] md:text-xs text-white/50 uppercase tracking-wide">
                                    <%= __('result.details.visibility') %>
                                </p>
                                <p class="font-semibold text-sm md:text-base">
                                    <%= weather.current.visibility %> km
                                </p>
                            </div>
                        </div>
                        <div class="glass-card p-3 md:p-4 flex items-center gap-3">
                            <span class="text-xl md:text-2xl">üå°Ô∏è</span>
                            <div>
                                <p class="text-[10px] md:text-xs text-white/50 uppercase tracking-wide">
                                    <%= __('result.details.pressure') %>
                                </p>
                                <p class="font-semibold text-sm md:text-base">
                                    <%= weather.current.pressure %> hPa
                                </p>
                            </div>
                        </div>
                        <div class="glass-card p-3 md:p-4 flex items-center gap-3">
                            <span class="text-xl md:text-2xl">üåÖ</span>
                            <div>
                                <p class="text-[10px] md:text-xs text-white/50 uppercase tracking-wide">
                                    <%= __('result.details.sunrise') %>
                                </p>
                                <p class="font-semibold text-sm md:text-base">
                                    <%= formatTime(weather.current.sunrise) %>
                                </p>
                            </div>
                        </div>
                        <div class="glass-card p-3 md:p-4 flex items-center gap-3">
                            <span class="text-xl md:text-2xl">üåá</span>
                            <div>
                                <p class="text-[10px] md:text-xs text-white/50 uppercase tracking-wide">
                                    <%= __('result.details.sunset') %>
                                </p>
                                <p class="font-semibold text-sm md:text-base">
                                    <%= formatTime(weather.current.sunset) %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Search Another City -->
                <form action="/weather" method="GET" class="max-w-lg mx-auto mt-8">
                    <div class="flex gap-2 p-2 bg-white/10 border border-white/20 rounded-xl">
                        <div class="flex items-center flex-1 gap-2 px-3">
                            <span>üîç</span>
                            <input type="text" name="city" placeholder="<%= __('result.searchAnother') %>"
                                class="flex-1 bg-transparent border-none text-white placeholder-white/50 py-2 outline-none text-sm"
                                required autocomplete="off">
                        </div>
                        <button type="submit" class="btn-primary py-2 px-4 text-sm">
                            <%= __('result.searchButton') %>
                        </button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Hourly Forecast -->
        <section class="py-8 md:py-10 bg-black/20">
            <div class="container mx-auto px-4">
                <h2 class="flex items-center gap-2 text-lg md:text-xl font-semibold mb-6">
                    <span class="text-2xl">‚è∞</span>
                    <%= __('result.hourlyForecast.title') %>
                </h2>

                <!-- Horizontal Scroll Container -->
                <div
                    class="overflow-x-auto pb-4 -mx-4 px-4 scrollbar-thin scrollbar-thumb-primary scrollbar-track-transparent">
                    <div class="flex gap-3 md:gap-4">
                        <% weather.hourly.forEach((hour, index)=> { %>
                            <article
                                class="flex-shrink-0 w-20 md:w-24 glass-card p-3 md:p-4 text-center hover:bg-white/10 hover:-translate-y-1 transition-all duration-300 <%= index === 0 ? 'bg-gradient-to-b from-primary to-primary-dark border-primary' : '' %>">
                                <p class="font-semibold text-xs md:text-sm mb-2">
                                    <%= index===0 ? __('result.hourlyForecast.now') : formatTime(hour.dt) %>
                                </p>
                                <img src="<%= hour.iconUrl %>" alt="<%= hour.description %>"
                                    class="w-10 h-10 md:w-12 md:h-12 mx-auto object-contain" width="50" height="50"
                                    loading="lazy">
                                <p class="text-lg md:text-xl font-bold my-2">
                                    <%= hour.temperature %>¬∞
                                </p>
                                <div
                                    class="flex items-center justify-center gap-1 text-[10px] md:text-xs text-white/60">
                                    <span>üíß</span>
                                    <span>
                                        <%= hour.pop %>%
                                    </span>
                                </div>
                            </article>
                            <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- 5-Day Forecast -->
        <section class="py-8 md:py-10">
            <div class="container mx-auto px-4">
                <h2 class="flex items-center gap-2 text-lg md:text-xl font-semibold mb-6">
                    <span class="text-2xl">üìÖ</span>
                    <%= __('result.dailyForecast.title') %>
                </h2>

                <div class="flex flex-col gap-2 md:gap-3 max-w-3xl mx-auto">
                    <% weather.daily.forEach((day, index)=> { %>
                        <article
                            class="glass-card p-3 md:p-4 grid grid-cols-3 md:grid-cols-5 items-center gap-2 md:gap-4 hover:bg-white/10 transition-colors <%= index === 0 ? 'bg-gradient-to-r from-primary/20 to-transparent border-l-2 border-l-primary' : '' %>">
                            <!-- Day -->
                            <div class="font-semibold text-sm md:text-base">
                                <%= index===0 ? __('result.dailyForecast.today') : formatShortDate(day.dt) %>
                            </div>

                            <!-- Icon -->
                            <div class="flex justify-center">
                                <img src="<%= day.iconUrl %>" alt="<%= day.description %>"
                                    class="w-10 h-10 md:w-12 md:h-12 object-contain" width="50" height="50"
                                    loading="lazy">
                            </div>

                            <!-- Description (hidden on small mobile) -->
                            <div class="hidden md:block text-sm text-white/60 capitalize">
                                <%= day.description %>
                            </div>

                            <!-- Temps -->
                            <div class="flex items-center gap-2 justify-end md:justify-center">
                                <span class="font-bold text-sm md:text-base">
                                    <%= day.tempMax %>¬∞
                                </span>
                                <div class="hidden sm:block w-16 h-1.5 bg-white/10 rounded-full overflow-hidden">
                                    <div class="h-full bg-gradient-to-r from-accent-blue to-primary rounded-full"
                                        style="margin-left: <%= (day.tempMin + 10) / 50 * 100 %>%; width: <%= (day.tempMax - day.tempMin) / 50 * 100 %>%;">
                                    </div>
                                </div>
                                <span class="text-white/60 text-sm md:text-base">
                                    <%= day.tempMin %>¬∞
                                </span>
                            </div>

                            <!-- Rain -->
                            <div class="flex items-center gap-1 text-xs md:text-sm text-accent-cyan justify-end">
                                <span>üíß</span>
                                <span>
                                    <%= day.pop %>%
                                </span>
                            </div>
                        </article>
                        <% }); %>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>
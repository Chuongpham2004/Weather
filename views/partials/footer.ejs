    <div class="flex flex-col md:flex-row justify-between gap-8 mb-8">
      <!-- Brand -->
      <div class="text-center md:text-left">
        <div class="flex items-center justify-center md:justify-start gap-2 mb-2">
          <span class="text-2xl">üå§Ô∏è</span>
          <span class="font-bold text-lg">
            <%= __('app.name') %>
          </span>
        </div>
        <p class="text-white/50 text-sm max-w-xs mx-auto md:mx-0">
          <%= __('app.tagline') %>
        </p>
      </div>

      <!-- Links -->
      <div class="flex flex-col sm:flex-row gap-8 text-center md:text-left">
        <div>
          <h4 class="font-semibold mb-3 text-white/80">
            <%= __('footer.navigation') %>
          </h4>
          <div class="flex flex-col gap-2">
            <a href="/" class="text-white/50 hover:text-accent-cyan transition-colors text-sm">
              <%= __('nav.home') %>
            </a>
            <a href="/about" class="text-white/50 hover:text-accent-cyan transition-colors text-sm">
              <%= __('nav.about') %>
            </a>
          </div>
        </div>

        <div>
          <h4 class="font-semibold mb-3 text-white/80">
            <%= __('footer.contact') %>
          </h4>
          <div class="flex flex-col gap-2 text-white/50 text-sm">
            <p>
              <%= __('footer.email') %>: contact@weatherapp.com
            </p>
            <p>
              <%= __('footer.hotline') %>: 1900-xxxx
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div
      class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-6 border-t border-white/10 text-xs text-white/40">
      <p>
        <%= __('app.copyright', currentYear) %>
      </p>
      <p>
        <%= __('app.dataAttribution') %>
          <a href="https://openweathermap.org" target="_blank" rel="noopener noreferrer"
            class="text-accent-cyan font-medium hover:underline">
            OpenWeatherMap
          </a>
      </p>
    </div>
  </div>
</footer>

<% if (typeof weather !=='undefined' && weather && weather.success) { %>
  <!-- JSON-LD Schema Markup for SEO -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "<%= title %>",
    "description": "<%= description %>",
    "url": "<%= 'https://weatherapp.com/weather?city=' + encodeURIComponent(weather.current.city) %>",
    "inLanguage": "<%= currentLang %>",
    "dateModified": "<%= weather.fetchedAt.toISOString() %>",
    "mainEntity": {
      "@type": "Place",
      "name": "<%= weather.current.city %>, <%= weather.current.country %>",
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": <%= weather.current.coord.lat %>,
        "longitude": <%= weather.current.coord.lon %>
      }
    },
    "publisher": {
      "@type": "Organization",
      "name": "Weather App",
      "url": "https://weatherapp.com"
    }
  }
  </script>
  <% } else { %>
    <!-- JSON-LD Schema for Homepage -->
    <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "<%= __('app.name') %>",
    "description": "<%= __('home.description') %>",
    "url": "https://weatherapp.com",
    "inLanguage": "<%= currentLang %>",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://weatherapp.com/weather?city={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>
    <% } %>
      </body>

      </html>
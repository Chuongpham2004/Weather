<% if (typeof weather !=='undefined' && weather && weather.success) { %>
  <!-- JSON-LD Schema Markup for SEO -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": "<%= title %>",
    "description": "<%= description %>",
    "url": "<%= 'https://weatherapp.com/weather?city=' + encodeURIComponent(weather.current.city) %>",
    "inLanguage": "<%= currentLang %>",
    "dateModified": "<%= weather.fetchedAt.toISOString() %>",
    "mainEntity": {
      "@type": "Place",
      "name": "<%= weather.current.city %>, <%= weather.current.country %>",
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": <%= weather.current.coord.lat %>,
        "longitude": <%= weather.current.coord.lon %>
      }
    },
    "about": {
      "@type": "Thing",
      "name": "Weather Forecast",
      "description": "<%= currentLang === 'vi' ? 'D·ª± b√°o th·ªùi ti·∫øt t·∫°i' : 'Weather forecast for' %> <%= weather.current.city %>: <%= weather.current.temperature %>¬∞C, <%= weather.current.description %>"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Weather App",
      "url": "https://weatherapp.com"
    }
  }
  </script>
  <% } else { %>
    <!-- JSON-LD Schema for Homepage -->
    <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "<%= __('app.name') %>",
    "description": "<%= __('home.description') %>",
    "url": "https://weatherapp.com",
    "inLanguage": "<%= currentLang %>",
    "potentialAction": {
      "@type": "SearchAction",
      "target": "https://weatherapp.com/weather?city={search_term_string}",
      "query-input": "required name=search_term_string"
    }
  }
  </script>
    <% } %>
      </body>

